<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.github.crazyuploader.covid19.ui.IndianStatesDetail">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:text="@string/indian_states_stats"
            android:textSize="32sp"/>

    <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:indeterminateTint="#212121"
            android:id="@+id/stateProgressBar"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/indianStateRecyclerView"/>

</LinearLayout>
